<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/btToggle"
        android:layout_width="106dp"
        android:layout_height="24dp"
        android:layout_marginTop="112dp"
        android:text="Bluetooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Discoverable"
        app:layout_constraintEnd_toEndOf="@+id/btToggle"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/btToggle"
        app:layout_constraintTop_toBottomOf="@+id/btToggle" />

    <Button
        android:id="@+id/getDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get devices"
        app:layout_constraintEnd_toEndOf="@+id/discover"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/discover"
        app:layout_constraintTop_toBottomOf="@+id/discover" />

    <TextView
        android:id="@+id/isPaired"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>